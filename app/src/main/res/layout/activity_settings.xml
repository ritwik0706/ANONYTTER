<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ritwikjha.anonytter.Settings">

    <LinearLayout
        android:background="@color/backGray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settings_back"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLogout"
                android:layout_width="22pt"
                android:layout_height="22pt"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_exit_to_app_white_24dp" />

            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="5pt"
                android:text="Logout"
                android:textColor="@color/Cyan"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="1pt"
        android:background="@drawable/settings_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="24pt"
                android:layout_height="22pt"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_delete_forever_white_24dp" />

        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5pt"
            android:text="Delete Current User"
            android:textColor="@color/Cyan"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1pt"
            android:background="@drawable/settings_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAbout"
                android:layout_width="20pt"
                android:layout_height="22pt"
                android:layout_weight="1"
                app:srcCompat="@mipmap/assassin_s_creed_anonymous" />

            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5pt"
                android:text="About Anonytter"
                android:textColor="@color/Cyan"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
